<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/real_backage" >

    <RadioGroup
        android:id="@+id/allcat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/checktwo"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="全部"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/yan" />

        <RadioButton
            android:id="@+id/wd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/checktwo"
            android:button="@null"
            android:gravity="center"
            android:text="温度"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/yan" />

        <RadioButton
            android:id="@+id/sd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/checktwo"
            android:button="@null"
            android:gravity="center"
            android:text="湿度"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/yan" />

        <RadioButton
            android:id="@+id/cd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/checktwo"
            android:button="@null"
            android:gravity="center"
            android:text="co2"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/yan" />

        <RadioButton
            android:id="@+id/Nd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/checktwo"
            android:button="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="土壤湿度"
            android:textSize="18dp" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/allcat"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/yan" />

    <ListView
        android:id="@+id/messlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/clear"
        android:layout_below="@+id/allcat"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/wcf" >
    </ListView>

    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:text="清空" />

</RelativeLayout>